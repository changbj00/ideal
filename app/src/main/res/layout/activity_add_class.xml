<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activity.AddClassActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#439df8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="添加课程"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/doctor_iv_return"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_arrow_back"
            android:visibility="visible" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout">
        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="标题："
            android:textSize="16sp" />

        <EditText
            android:id="@+id/title_text"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/title_name"
            android:layout_toEndOf="@id/title_name"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext"
            android:gravity="center_vertical"
            android:hint="请输入标题……"
            android:padding="5dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/title_name"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="讲师："
            android:textSize="16sp" />

        <EditText
            android:id="@+id/teacher_text"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/teacher_name"
            android:layout_toEndOf="@id/teacher_name"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext"
            android:gravity="center_vertical"
            android:hint="请输入姓名……"
            android:padding="5dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/address_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/teacher_name"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="地点："
            android:textSize="16sp" />

        <EditText
            android:id="@+id/address_text"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/address_name"
            android:layout_toEndOf="@id/address_name"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:hint="请输入地点……"
            android:singleLine="true" />
        <TextView
            android:id="@+id/start_time_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/address_name"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="开始时间："
            android:textSize="16sp" />

        <Button
            android:id="@+id/start_time"
            android:layout_width="214dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/start_time_text"
            android:layout_toEndOf="@id/start_time_text"
            android:layout_below="@+id/address_text"
            android:layout_centerHorizontal="true"
            android:hint="请选择开始时间" />
        <TextView
            android:id="@+id/end_time_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/start_time_text"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="结束时间："
            android:textSize="16sp" />

        <Button
            android:id="@+id/end_time"
            android:layout_width="216dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@id/end_time_text"
            android:layout_toEndOf="@id/end_time_text"
            android:layout_below="@+id/start_time"
            android:layout_centerHorizontal="true"
            android:hint="请选择结束时间" />

        <TextView
            android:id="@+id/content_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/end_time_text"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="内容："
            android:textSize="16sp" />

        <EditText
            android:id="@+id/content_text"
            android:layout_width="260dp"
            android:layout_height="81dp"
            android:layout_alignBaseline="@id/content_name"
            android:layout_toEndOf="@id/content_name"
            android:layout_below="@+id/end_time"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext"
            android:gravity="top"
            android:hint="请输入内容……"
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:maxLines="5"
            android:padding="5dp"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/action_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/content_name"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="5dp"
            android:text="上传图片："
            android:textSize="16sp" />
        <Button
            android:id="@+id/add_class"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="提交"
            android:textColor="#f7f7f7"
            android:background="@drawable/selector_login_submit_bg"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_image"
            android:layout_marginLeft="5dp"
            android:padding="5dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbarStyle="outsideOverlay"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="1"
                tools:listitem="@layout/list_item_image" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>